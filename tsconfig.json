{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@app/redux/*": ["redux/*"],
      "@app/redux": ["redux"],
      "@app/types/*": ["shared/types/*"],
      "@app/types": ["shared/types"],
      "@app/models/*": ["shared/models/*"],
      "@app/models": ["shared/models"],
      "@app/constants/*": ["shared/constants/*"],
      "@app/constants": ["shared/constants"],
      "@app/crema/*": ["@crema/*"],
      "@app/crema": ["@crema"],
      "@app/auth/*": ["modules/auth/*"],
      "@app/auth": ["modules/auth"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
